<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>404</error-code>
    <location>/not_found.html</location>
  </error-page>
  <error-page>
    <exception-type>com.orangeandbronze.enlistment.domain.RoomCapacityReachedException</exception-type>
    <location>/enlistment_error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>com.orangeandbronze.enlistment.domain.SameSubjectException</exception-type>
    <location>/enlistment_error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>com.orangeandbronze.enlistment.domain.DuplicateEnlistmentException</exception-type>
    <location>/enlistment_error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>com.orangeandbronze.enlistment.domain.FacultyScheduleConflictException</exception-type>
    <location>/enlistment_error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>com.orangeandbronze.enlistment.domain.RoomScheduleConflictException</exception-type>
    <location>/enlistment_error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>com.orangeandbronze.enlistment.domain.SectionCreationException</exception-type>
    <location>/enlistment_error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>com.orangeandbronze.enlistment.domain.ScheduleConflictException</exception-type>
    <location>/enlistment_error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.sql.SQLException</exception-type>
    <location>/PleaseContactYourDBA.jsp</location>
  </error-page>
</web-app>